extends layout

block content
    include datepicker.html
    .nav.navbar.navbar-fixed-top
        .container.navigation
            .row.top
                img.img-responsive(src="images/dc_roasters_200x124_lt.png")
                div.login
                    if(!username)
                        a(href="/login") 
                            button.btn.btn-primary.login Login
                        a(href="/register") 
                            button.btn.btn-default Register
                    if(username)
                        a(href="/account") Welcome! #{username}
                        a(href="/logout")
                            button.btn.btn-danger Logout
            .row.bottom
                ul.nav.navbar-nav
                    li
                        span.sprite#welcome
                        a(href="/" class="welcome-link") 1. Welcome
                    li
                        span.sprite#options
                        a(href="/choices" class="options-link") 2. Options
                    li
                        span.sprite.active#delivery
                        a(href="/delivery" class="delivery-link active") 3. Delivery
                    li
                        span.sprite#payment
                        a(href="/payment" class="payment-link") 4. Payment
    .page-wrapper

        h1 Please enter your shipping info
        p We treat your coffee like gold.  Like black gold(not Texas tea).  It will be shipped safely and is guaranteed.
        .container
            form.col-xs-6(role="form",name="delivery-form",action="/delivery",method="post")
                h2 Delivery Address
                label Full Name
                .form-group
                    input.form-control(type="text",name="name",placeholder="Full Name", value=name)
                    //- label Full Name
                label Address Line 1
                .form-group
                    input.form-control(type="text",name="address1",placeholder="Address Line 1", value=address1)
                    label Street address, P.O. Box, company name, c/o
                label Address Line 2
                .form-group
                    input.form-control(type="text",name="address2",placeholder="Address Line 2", value=address2)
                    label Apartment, suite, unit, building, floor, etc.
                label City
                .form-group
                    input.form-control(type="text",name="city",placeholder="City", value=city)
                    //- label City, town, etc.
                label State/Province/Region
